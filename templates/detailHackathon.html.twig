{% extends 'base.html.twig' %}
{% block title %}{% endblock %}
{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>
	<div class="example-wrapper" style="text-align:center;">
			<div class="card" style="width: 50rem; text-align: center;">
				<div class="card-body">
					<h2><p class="card-text">{{unHackathon.theme}}</p></h2>
					<img style="width: 50%; height: 30%; margin-bottom:20px; margin-top:20px;" src={{unHackathon.image}}>
					<p class="card-text">Lieu : {{unHackathon.lieu}}</p>
					<p class="card-text">Ville : {{unHackathon.ville}}</p>
                    <p class="card-text">Rue : {{unHackathon.rue}}</p>
                    <p class="card-text">Code postal : {{unHackathon.cp}}</p>
                    <p class="card-text">Date de debut : {{unHackathon.datedebut|date('d/m/Y')}}</p>
                    <p class="card-text">Heure de debut : {{unHackathon.heuredebut|date('H:i:s')}}</p>
                    <p class="card-text">Date de fin : {{unHackathon.dateFin|date('d/m/Y')}}</p>
                    <p class="card-text">Heure de fin : {{unHackathon.heureFin|date('H:i:s')}}</p>
                    <p class="card-text">Date limite pour l'inscription : {{unHackathon.dateLimite|date('d/m/Y')}}</p>
                    <p class="card-text">Nombres de places restantes : {{unHackathon.nbplaces}}</p>
					<button href="{{ path('updateHackathon') }}" type="button" class="btn btn-primary">Inscription</button>
				</div>
			</div>
		</div>
{% endblock %}
