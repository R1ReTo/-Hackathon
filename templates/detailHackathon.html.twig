{% extends 'base.html.twig' %}
{% block title %}{% endblock %}
{% block body %}
	<svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
		<symbol id="exclamation-triangle-fill" fill="currentColor" viewbox="0 0 16 16">
			<path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
		</symbol>
	</svg>
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>
	{% if not is_granted('IS_AUTHENTICATED_FULLY') %}
	<div class="alert alert-warning d-flex align-items-center" role="alert">
		<svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Warning:"><use xlink:href="#exclamation-triangle-fill"/></svg>
		<div>
			Vous devez être connecté pour vous inscrire. <a  class="alert-link" href="{{path('connexionParticipant')}}">Connexion</a> 
		</div>
	</div>
	
	{% endif %}
	<div class="example-wrapper" style="text-align:center;">
		<div class="card" style="width: 50rem; text-align: center;">
			<div class="card-body">
				<h2>
					<p class="card-text">{{unHackathon.theme}}</p>
				</h2>
				<img style="width: 50%; height: 30%; margin-bottom:20px; margin-top:20px;" src={{unHackathon.image}}>
				<p class="card-text">Lieu :
					{{unHackathon.lieu}}</p>
				<p class="card-text">Ville :
					{{unHackathon.ville}}</p>
				<p class="card-text">Rue :
					{{unHackathon.rue}}</p>
				<p class="card-text">Code postal :
					{{unHackathon.cp}}</p>
				<p class="card-text">Date de debut :
					{{unHackathon.datedebut|date('d/m/Y')}}</p>
				<p class="card-text">Heure de debut :
					{{unHackathon.heuredebut|date('H:i:s')}}</p>
				<p class="card-text">Date de fin :
					{{unHackathon.dateFin|date('d/m/Y')}}</p>
				<p class="card-text">Heure de fin :
					{{unHackathon.heureFin|date('H:i:s')}}</p>
				<p class="card-text">Date limite pour l'inscription :
					{{unHackathon.dateLimite|date('d/m/Y')}}</p>
				<p class="card-text">Nombres de places restantes :
					{{unHackathon.nbplaces}}</p>
				{% if is_granted('IS_AUTHENTICATED_FULLY') %}
					<a href={{path('updateHackathon',{'id':unHackathon.idhackathon} )}}>
						<button type="button" class="btn btn-primary">Inscription</button>
					</a>
				{% endif %}

			</div>
		</div>
	</div>
{% endblock %}
