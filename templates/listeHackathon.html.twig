{% extends 'base.html.twig' %}

{% block title %}Hello SerieController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>
	<div class="row">
		<div class="container">
			<div class="col-sm-8">
				<div class="dropdown">
					<button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
						Listes Villes
					</button>
					<ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
					{% for uneVille in lesVilles %}

						<li>
							<a class="dropdown-item" href={{path ('hackathon', {'ville':uneVille.ville} )}}>Action</a>
						</li>
						{% endfor %}
					</ul>
				</div>

				{% for unHackathon in lesHackathons %}


					<div class="card" style="width: 18rem;">
						<div class="card-body">
							<h5 class="card-title">{{unHackathon.theme}}</h5>
							<p class="card-text">{{unHackathon.ville}}</p>
							<a class="btn btn-primary" href={{path ('hackathon', {'id':unHackathon.idhackathon} )}} role="button">
								En savoir plus
							</a>

						</div>
					</div>
					<br>

				{% endfor %}
			</div>
		</div>
	</div>
{% endblock %}
